{
  "name": "copy-bible-app",
  "version": "1.3.9",
  "description": "성경구절을 자동으로 복사해주는 프로그램",
  "main": "./src/electron/main.js",
  "scripts": {
    "start": "concurrently \"cross-env NODE_ENV=development npm run react-start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development npm run electron-start\"",
    "react-start": "webpack serve --mode development",
    "electron-start": "electron .",
    "build": "webpack --mode production",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder --mac --win --linux",
    "test": "jest"
  },
  "keywords": [],
  "author": "Yoochan Kim <0913vision@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "babel-jest": "^30.0.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^30.0.0",
    "style-loader": "^4.0.0",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "es-hangul": "^2.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "build": {
    "appId": "com.mideum.copible",
    "productName": "카피블",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/electron/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.reference"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "카피블",
      "uninstallDisplayName": "카피블",
      "runAfterFinish": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "0913vision",
      "repo": "copible"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    }
  }
}
